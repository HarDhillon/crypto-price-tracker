<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/styles/main.css">
    <%- include('../includes/coinFetchScript.ejs') %>

    <body>
        <main>
            <div>
                <form action="/add-coin" method="POST" >
                    <label>Track New Coin (Enter Token Address)</label>
                    <input name="tokenAddress" placeholder="0xe6f4a40156C9E8cb99FDEdeCF84" type="text"/>
                    <button type="submit">Track</button>
                </form>
            </div>
            <div>
                <% if (coinData && coinData.length > 0) { %>
                    <% for (let coin of coinData) { %>
                        <div>
                            <h4 class="coin-name"><%= coin.baseToken.name %></h4>
                            <p class="coin-price">$<%= coin.priceUsd %></p>

                            <form action="/buy-coin" method="POST">
                                <label>My Initial Buy Price</label>
                                <input step="any" name="buyPrice" type="number"/>
                                <input name="coinToken" type="hidden" value="<%= coin.pairAddress %>"/>
                                <button>Buy</button>
                            </form>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <br><br>
            <div>
                <a href="/logout">Logout</a>
            </div>
        </main>
    </body>

<%- include('../includes/end.ejs') %>